            <dd><?php echo $this->formText('weight', $this->ebay->weight, array('id' => 'weight', 'size' => 40)); ?></dd>
            <dt><label for="width">Width</label></dt>
            <dd><?php echo $this->formText('width', $this->ebay->width, array('id' => 'width', 'size' => 40)); ?></dd>
            <dt><label for="height">Height</label></dt>
            <dd><?php echo $this->formText('height', $this->ebay->height, array('id' => 'height', 'size' => 40)); ?></dd>
            <dt><label for="length">Length</label></dt>
            <dd><?php echo $this->formText('length', $this->ebay->length, array('id' => 'length', 'size' => 40)); ?></dd>
