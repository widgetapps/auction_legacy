<h1>Editing eBay details for item <em><?php echo $this->item->name; ?></em></h1>


<div id="itemInfo">
    <form action="/items/index/ebayprocess" method="post">
        <?php echo $this->formHidden('itemEbayId', $this->ebay->itemEbayId); ?>
        <?php echo $this->formHidden('itemId', $this->item->itemId); ?>
        <dl>
